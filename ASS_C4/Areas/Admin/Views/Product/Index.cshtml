@model ASS_C4.Models.Product

@{
    ViewData["Title"] = "Role";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="section__content section__content--p30">
    <div class="row">
        <div class="col-md-12">
            <!-- DATA TABLE -->
            <h3 class="title-5 m-b-35">Quản lý chức vụ</h3>
            <div class="table-data__tool">
                <div class="table-data__tool-left">
                    <div class="rs-select2--light rs-select2--md">
                        <select class="js-select2" name="property">
                            <option selected="selected">All Properties</option>
                            <option value="">Option 1</option>
                            <option value="">Option 2</option>
                        </select>
                        <div class="dropDownSelect2"></div>
                    </div>
                    <div class="rs-select2--light rs-select2--sm">
                        <select class="js-select2" name="time">
                            <option selected="selected">Today</option>
                            <option value="">3 Days</option>
                            <option value="">1 Week</option>
                        </select>
                        <div class="dropDownSelect2"></div>
                    </div>
                    <button class="au-btn-filter">
                        <i class="zmdi zmdi-filter-list"></i>filters
                    </button>
                </div>
                <div class="table-data__tool-right">
                    <button type="button" data-toggle="modal" data-target="#createModal" class="au-btn au-btn-icon au-btn--green au-btn--small">
                        <i class="zmdi zmdi-plus"></i>Thêm mới
                    </button>
                    <div class="rs-select2--dark rs-select2--sm rs-select2--dark2">
                        <select class="js-select2" name="type">
                            <option selected="selected">Export</option>
                            <option value="">Excel</option>
                        </select>
                        <div class="dropDownSelect2"></div>
                    </div>
                </div>
            </div>
            <input type="hidden" id="EmpId" />
            <div class="table-responsive table-responsive-data2">
                <table class="table table-data2">
                    <thead>
                        <tr>
                            <th>
                                STT
                            </th>
                            <th>
                                TÊN SẢN PHẨM
                            </th>
                            <th>
                                HÌNH ẢNH
                            </th>
                            <th>
                                SỐ LƯỢNG
                            </th>
                            <th>
                                SIZE
                            </th>
                            <th>
                                GIÁ
                            </th>
                            <th>
                                TRẠNG THÁI
                            </th>
                            <th>
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int rowNo = 0;
                        }
                        @if (ViewBag.product != null)
                        {
                            @foreach (var item in ViewBag.product)
                            {
                                <tr class="tr-shadow item-@item.IdProduct">
                                    <td>
                                        @(rowNo += 1)
                                    </td>
                                    <td>
                                        @item.NameProduct
                                    </td>
                                    <td class="desc">
                                        <img src="@item.Image" alt="Hình ảnh" style="width: 154px; height: 130px;">
                                    </td>
                                    <td class="desc">
                                        @item.Quantity
                                    </td>
                                    <td class="desc">
                                        @item.Size
                                    </td>
                                    <td class="desc">
                                        @string.Format("{0:N0}", item.Price) vnđ
                                    </td>
                                    <td class="desc">
                                        @item.Status
                                    </td>

                                    <td>
                                        <div class="table-data-feature">
                                            <button class="edit-btn item"
                                                    data-toggle="modal" data-target="#editModal"
                                                    data-id="@item.IdProduct"
                                                    data-placement="top" title="Sửa">
                                                <i class="zmdi zmdi-edit"></i>
                                            </button>

                                            <button class="item" id="showModal" href="@Url.Action("Delete", "Product", new {id = item.IdProduct})"
                                                    data-toggle="modal" data-target="#deleteModal" onclick="Confirm(@item.IdProduct)"
                                                    data-placement="top" title="Xóa">
                                                <i class="zmdi zmdi-delete"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                                <tr class="spacer"></tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
            <!-- END DATA TABLE -->
            <input type="hidden" id="roleId" style="color:red" />

        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="copyright">
                <p>Copyright © 2018 Colorlib. All rights reserved. Template by <a href="https://colorlib.com">Colorlib</a>.</p>
            </div>
        </div>
    </div>
</div>
